<h1>Welcome to RetFlix</h1>

<%= form_tag "/", :method => :get do %>
	<%= text_field_tag :q, params[:q] %>
	<%= submit_tag "Find Me Movies" %>
<% end %>

<a href="<%= new_movie_path %>">Add a movie</a>
// <a href="<%= movies_index_path %>">View all movies</a>

<ul>
<% @movies.each do |movie| %>
<li>
	<h2><%= movie.title %> (<%=	 movie.year_released %>)</h2>
	<p>
		<%= movie.description %>
	</p>
	<p>
		<a href="<%= movie_path(movie) %>">More details</a>
</li>
<% end %>
</ul>